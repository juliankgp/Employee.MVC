@model EmployeeModel
@{
    ViewData["Title"] = "Thales";
}

<div class="container m-5">
    <div class="d-flex justify-content-center">
        <div class="text-center">
            <div class="card text-center" style="width: 100%; height: 100%; border-color:black;">
                <div class="card-body">
                    <form asp-action="Search">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h5 class="card-title mb-5 display-6">Show Employee Information</h5>
                        <div class="input-group mb-1">
                            <input asp-for="Id" class="form-control" placeholder="Enter employee id" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <input type="submit" value="Search" class="btn btn-outline-info" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>